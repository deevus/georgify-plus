{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "georgify-plus",
  "version": "1.3.2",
  "scripts": {
    "prebuild": "shx rm -rf dist/",
    "build-css": "sass ./src/user.scss ./dist/user.css",
    "build-js": "spack",
    "build": "yarn build-js && yarn build-css",
    "copy-assets": "shx cp ./assets/* ./dist",
    "postbuild": "yarn copy-assets",
    "postinstall": "husky install",
    "watch-js": "npm-watch build-js",
    "watch-css": "yarn build-css --watch",
    "watch-assets": "npm-watch copy-assets",
    "watch": "concurrently npm:watch-*",
    "version-check": "ts-node versionCheck.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.27",
    "@types/chrome": "^0.0.209",
    "chrome-types": "^0.1.165",
    "concurrently": "^7.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "npm-watch": "^0.11.0",
    "prettier": "^2.8.3",
    "sass": "^1.57.1",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "*.{css,json,ts,js}": [
      "yarn prettier --write"
    ],
    "*.json": [
      "yarn version-check"
    ]
  },
  "watch": {
    "copy-assets": "assets/*.*",
    "build-js": "src/*.*"
  }
}
